<!-- Button trigger modal -->
<div class="btn btn-gradient text-center ml-2" data-toggle="modal" data-target="#comment">
   Comment
</div>
<!-- Modal -->
<div class="modal fade p-2" id="review" tabindex="-1" aria-labelledby="commentLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title modal-titles" id="commentLabel">Pleave leave a comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body rounded p-3">
        <%= render 'comments/form' %>
      </div>
    </div>
  </div>
</div>
