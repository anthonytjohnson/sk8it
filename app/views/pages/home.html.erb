        <%= link_to "Log In", new_user_session_path, class: "btn btn-gradient m-2" %>
        <%= link_to "Sign Up", "#", class: "btn btn-gradient m-2" %>
      </div>
      <div class="container d-flex justify-content-center">
        <%= link_to "Browse", "#", class: "btn btn-gradient m-2" %>
