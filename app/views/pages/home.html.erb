<div id="home-container">
  <% if current_user.nil? %>
    <div class="container d-flex justify-content-center">
      <%= link_to "Log In", "#", class: "btn btn-gradient m-2" %>
      <%= link_to "Sign Up", "#", class: "btn btn-gradient m-2" %>
    </div>
    <div class="container d-flex justify-content-center">
      <%= link_to "Browse", "#", class: "btn btn-gradient m-2" %>
    </div>
  <% else %>
    <div class="container d-flex flex-column justify-content-around">
      <h2>Welcome back, user!.</h2>
      <%= link_to "Browse", "#", class: "btn btn-gradient" %>
    </div>
  <% end %>
</div>
