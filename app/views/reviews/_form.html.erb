<%= simple_form_for [@spot, @review] do |f| %>
  <%= f.input :comment %>
  <%= f.input :rating, collection: [1, 2, 3, 4, 5], include_blank: false %>
  <div class='d-flex justify-content-between'>
    <%= link_to "Back", spot_path(params[:id]), class: 'btn btn-danger mr-3' %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
