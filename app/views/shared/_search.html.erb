<div class="search-bar pt-3">
  <%= form_tag spots_path, method: :get do %>
    <div class= "d-flex">
      <%= text_field_tag :query,
        params[:query],
        placeholder: "Find a spot"
      %>
      <%= button_tag type: 'submit', class: "search-bar" do %>
        <span><i class="fas fa-search"></i></span>
      <% end %>
    </div>
    <div class="radios mt-1">
      <div class="d-flex">
        <p><%= radio_button_tag(:spot, "spot") %></p>
        <p><%= label_tag(:spot_park, "Spots") %></p>
      </div>
      <div class="d-flex">
        <p><%= radio_button_tag(:shop, "shop") %></p>
        <p><%= label_tag(:spot_shop, "Shops") %></p>
      </div>
    </div>
  <% end %>
</div>
