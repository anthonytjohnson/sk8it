
<div class="search-bar">
  <%= form_tag spots_path, method: :get do %>
    <div class= "d-flex">
      <%= text_field_tag :query,
        params[:query],
        # class: "form-control",
        placeholder: "Find a spot"
      %>
      <%= button_tag type: 'submit', class: "search-bar" do %>
        <i class="fas fa-search"></i>
      <% end %>
      <%= radio_button_tag(:spot, "spot") %>
      <%= label_tag(:spot_park, "Spots") %>
      <%= radio_button_tag(:shop, "shop") %>
      <%= label_tag(:spot_shop, "Shops") %>
    </div>
  <% end %>
</div>
