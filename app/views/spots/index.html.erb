<%= form_tag spots_path, method: :get do %>
  <div class="d-flex">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a spot"
    %>
    <%= submit_tag "Search", class: "btn btn-danger" %>
  </div>
<% end %>
<br>

<div id="map"
  style="width: 100vw; height: 60vh;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div data-controller="carousel" class="swiper-container">
  <div class="swiper-wrapper">
    <% @spots.each do |spot| %>
    <div class="swiper-slide">
      <div class="card" style="width: 100vw; height: 30vh; background-color: #222831;">
        <%=link_to image_tag(spot.photos[0], style: 'height: 23vh; width: 100vw;'), spot %>
        <div class="card-body">
          <h4 class="card-text" ><%= link_to spot.name.capitalize, spot %></h4>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
