<%= render 'shared/search' %>
<%= render 'spot-details' %>
<% if @spot.category == "spot" %>
  <%= render 'spot-category-spot' %>
<% else %>
  <%= render 'spot-category-shop' %>
<% end %>
<% if current_user && current_user.spot_id != @spot.id %>
  <div style="display: none">
    <%= simple_form_for current_user, html: {id:"check-in-form"}, remote: true do |f| %>
      <%= f.input :spot_id, input_html: {value: @spot.id} %>
      <%= f.button :submit %>
    <% end %>
  </div>
<% end %>
