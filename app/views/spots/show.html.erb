<%= render 'shared/search' %>
<%= render 'spot-details' %>
<%# UPLOAD VIDEO BUTTON  %>
<div class="btn-upload mb-3">
  <%= link_to "Upload Video", new_spot_video_path(@spot), class: "btn btn-gradient" %>
</div>

<%# TOP VIDEO  %>
<% if @spot.videos.empty? %>
  <h2>No videos. Be the first to add one!</h2>
<% else %>
  <h2 class="ml-5 mt-3">Top Video</h2>
  <div class="card-video">
    <%= render 'top_video', spot: @spot, top_video: @top_video %>
  </div>
<% end %>

<%# VIDEOS  %>
<h2 class="ml-5 mt-3">Videos</h2>
<div class="card-video">
  <%= render 'videos', spot: @spot, videos: @videos %>
</div>
