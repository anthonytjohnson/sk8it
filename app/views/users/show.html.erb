<div class="container mt-3 text-center">
  <div class="card-profile">
    <h1>Profile</h1>
    <p><%= "Name: #{@user.username}" %></p>
    <p><%= "Email: #{@user.email}" %></p>
    <p><%= "Videos added: #{@user.videos.count}" %></p>
    <p><%#= "Reviews left: #{current_user.reviews.count}" %></p>
   </div>
  <br>
  <div class="container mb-3">
    <% if @user.videos.present? %>
      <% @user.videos.each do |video| %>
        <div class="card-video mb-5">
          <%= cl_video_tag(video.video.key, controls: true, width: 300, class: "card-img-top") %>
          <div class="video-infos" id="video-<%= video.id %>">
            <div>
              <p><i class="fas fa-quote-left"></i> <%= video.caption.capitalize %></p>
            </div>
            <div class="d-flex align-items-center justify-content-center">
              <p class="mr-5"><%= video.votes %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
    <div class="container">
      <h2>You haven't uploaded any videos yet!</h2>
    </div>
    <% end %>
  </div>
</div>
